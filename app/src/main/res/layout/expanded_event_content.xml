<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.maxchehab.groupfit.ExpandedEventActivity"
    android:layout_marginTop="?attr/actionBarSize"
    android:padding="10dp">
    <fragment
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/expand_mapView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:liteMode="true"
        tools:context="com.maxchehab.groupfit.ExpandedEventActivity" />

    <TextView
        android:id="@+id/expand_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/expand_mapView"
        android:maxLines="3"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="[title]"
        android:textColor="#222"
        android:textSize="22dp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/expand_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/expand_description"
        android:paddingTop="10dp"
        android:progress="40"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/expand_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/expand_title"
        android:text="[description]"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/expand_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[#] remaining spots."
        android:layout_below="@+id/expand_progressBar"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/expand_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[time]"
        android:layout_alignBaseline="@+id/expand_title"
        android:layout_alignBottom="@+id/expand_title"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/expand_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/expand_remaining"
        android:backgroundTint="@color/colorAccent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Sign Up"
        android:textColor="#FFF"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/expand_checkAnimation"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignBottom="@+id/expand_mapView"
        android:layout_centerHorizontal="true"
        android:scaleX="0"
        android:scaleY="0"
        android:tint="@color/colorDoubleTap"
        app:srcCompat="@drawable/ic_check" />
</RelativeLayout>
